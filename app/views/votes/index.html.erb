<p id="notice"><%= notice %></p>

<h1>Votes</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%if vote.candidate_id.present? %> 
         <%= Candidate.find(vote.candidate_id).name %> 
        <% end %></td>
        <td>
         <%= User.find(vote.user_id).email %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if Vote.where(:user_id=>current_user.id).present? %>
<%else%>
<%= link_to 'New Vote', new_vote_path %>
<%end%>